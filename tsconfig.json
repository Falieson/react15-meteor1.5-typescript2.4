{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "pretty": true
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "imports/**/*"    
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}